<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btn_dialog_status_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:width="200dp"
        android:background="@color/colorDeepO"
        android:text="@string/dialog_status_lost"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_dialog_status_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_dialog_status_lost"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:width="200dp"
        android:background="@color/colorLightBlue"
        android:text="@string/dialog_status_found"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_dialog_status_adopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_dialog_status_found"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:background="@color/colorGreen"
        android:text="@string/dialog_status_adopt"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>